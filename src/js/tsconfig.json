{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "esModuleInterop": true,
    "target": "ES2017",
    "module": "ES2020",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "types": ["node"]
  },
  "include": ["src/*.ts"],
  "exclude": ["test/**/*"]
}
